<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brentgrossman.downloadnpr"
    android:versionCode="5"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <provider
            android:name="com.brentgrossman.downloadnpr.data.CProvider"
            android:authorities="com.brentgrossman.downloadnpr"
            android:exported="false" />

        <activity
            android:name="com.brentgrossman.downloadnpr.ui.DownloadNPRActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|smallestScreenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.brentgrossman.downloadnpr.playback.MusicService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.brentgrossman.downloadnpr.action.TOGGLE_PLAYBACK" />
                <action android:name="com.brentgrossman.downloadnpr.action.PLAY" />
                <action android:name="com.brentgrossman.downloadnpr.action.PAUSE" />
                <action android:name="com.brentgrossman.downloadnpr.action.SKIP" />
                <action android:name="com.brentgrossman.downloadnpr.action.REWIND" />
                <action android:name="com.brentgrossman.downloadnpr.action.STOP" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.brentgrossman.downloadnpr.action.URL" />
            </intent-filter>
        </service>

        <receiver android:name="com.brentgrossman.downloadnpr.playback.MusicIntentReceiver" >
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service android:name="com.brentgrossman.downloadnpr.internet.DownloadStories" >
        </service>
        <service android:name="com.brentgrossman.downloadnpr.internet.PopulateAvailable" >
        </service>
        <service android:name="com.brentgrossman.downloadnpr.internet.DownloadStories" >
        </service>
    </application>

</manifest>